<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="se.acrend.sj2cal"
    android:versionCode="200"
    android:versionName="2.0.0" >

    <application
        android:debuggable="true"
        android:icon="@drawable/sj2cal"
        android:label="@string/app_name"
        android:name=".application.Sj2CalApp" >
        <activity android:name=".activity.TicketTabActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.help.About" >
            <intent-filter >
                <action android:name="se.acrend.sj2cal.About" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.help.GoSMS" />
        <activity android:name=".activity.ComingTicketList" />
        <activity android:name=".activity.DoneTicketList" />
        <activity android:name=".activity.TicketDetails" />
        <activity android:name=".activity.TicketText" />
        <activity android:name=".activity.Preferences" />
        <activity android:name=".activity.SubscriptionDetails" />
        <activity android:name=".activity.setup.ChooseAccount" />
        <activity android:name=".activity.setup.RegisterDevice" />
        <activity android:name=".activity.setup.ChooseCalendar" />

        <receiver android:name=".receiver.SmsReceiver" >
            <intent-filter android:priority="1000" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.MessageReceiver" >
            <intent-filter >
                <action android:name="se.acrend.sj2cal.TEST_MESSAGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.RegistrationReceiver" >
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.BACKGROUND_DATA_SETTING_CHANGED" />
            </intent-filter>
            <intent-filter >
                <action android:name="se.acrend.sj2cal.PREPARE_REGISTRATION" />
                <action android:name="se.acrend.sj2cal.REGISTER_BOOKING" />
                <action android:name="se.acrend.sj2cal.DELETE_BOOKING" />

                <data android:mimeType="vnd.android.cursor.item/se.acrend.sj2cal.ticket" />
            </intent-filter>
        </receiver>
        <!--
      Only C2DM servers can send messages for the app. If permission is 
			not set - any other app can generate it
        -->
        <receiver
            android:name="com.google.android.c2dm.C2DMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >

            <!-- Receive the actual message -->
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="se.acrend.sj2cal" />
            </intent-filter>
            <!-- Receive the registration id -->
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="se.acrend.sj2cal" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.BillingReceiver" >
            <intent-filter >
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".widget.TicketWidgetProvider" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ticket_widget" />
        </receiver>

        <service android:name=".service.BillingService" />
        <service android:name=".C2DMReceiver" />
        <service android:name=".service.RegistrationService" >
        </service>
        <service android:name=".service.UpdateService" >
            <intent-filter >
                <action android:name="se.acrend.sj2cal.BOOKING_INFORMATION" />
            </intent-filter>
        </service>
        <service android:name=".service.CalendarService" >
            <intent-filter >
                <action android:name="se.acrend.sj2cal.ADD_CALENDAR_EVENT" />
                <action android:name="se.acrend.sj2cal.DELETE_CALENDAR_EVENT" />

                <data android:mimeType="vnd.android.cursor.item/se.acrend.sj2cal.ticket" />
            </intent-filter>
        </service>

        <provider
            android:authorities="se.acrend.sj2cal.ticket"
            android:name=".content.TicketProvider" >
        </provider>
        <provider
            android:authorities="se.acrend.sj2cal.trafficInfo"
            android:name=".trafficinfo.provider.TrafficInfoProvider" >
        </provider>
    </application>

    <permission
        android:name="se.acrend.sj2cal.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="se.acrend.sj2cal.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="8" >
    </uses-sdk>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" >
    </supports-screens>

</manifest>