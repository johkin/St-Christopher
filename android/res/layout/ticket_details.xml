<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/ticket.details.scrollView"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent" >

 <RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" >

  <TableLayout
   android:id="@+id/ticket.details.tableLayout"
   android:layout_width="match_parent"
   android:layout_height="wrap_content" >

   <TableRow
    android:id="@+id/trainNoRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/details.trainNoLabel"
     style="@style/Label"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.trainNo" />

    <TextView
     android:id="@+id/ticket.details.trainNo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_span="2" />
   </TableRow>

   <TableRow
    android:id="@+id/codeRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/details.ticketCodeLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.ticketCode" />

    <TextView
     android:id="@+id/ticket.details.ticketCode"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_span="2" />
   </TableRow>

   <TableRow
    android:id="@+id/carRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/ticket.details.carLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.car" />

    <TextView
     android:id="@+id/ticket.details.car"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_span="2" />
   </TableRow>

   <TableRow
    android:id="@+id/seatRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/ticket.details.seatLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.seat" />

    <TextView
     android:id="@+id/ticket.details.seat"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_span="2" />
   </TableRow>

   <TableRow
    android:id="@+id/departureTrackRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/ticket.details.departureTrackLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.departureTrack" />

    <TextView
     android:id="@+id/ticket.details.departureTrack"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_span="2" />
   </TableRow>

   <TableRow
    android:id="@+id/arrivalTrackRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/ticket.details.arrivalTrackLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.arrivalTrack" />

    <TextView
     android:id="@+id/ticket.details.arrivalTrack"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_span="2" />
   </TableRow>

   <TableRow
    android:id="@+id/departureRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/ticket.details.departureLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.departure" />

    <Button
     android:id="@+id/ticket.details.departure"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="20111103 07:21" />
   </TableRow>

   <TableRow
    android:id="@+id/arrivalRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
     android:id="@+id/ticket.details.arrivalLabel"
     style="@style/Label"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:text="@string/ticket.details.arrival" />

    <Button
     android:id="@+id/ticket.details.arrival"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="20111103 08:34" />
   </TableRow>

   <TableRow
    android:id="@+id/notifyRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ToggleButton
     android:id="@+id/ticket.details.notify"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />

    <TextView
     android:id="@+id/details.notifyLabel"
     style="@style/Label"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_span="2"
     android:text="@string/ticket.details.notify" />
   </TableRow>
  </TableLayout>

  <Button
   android:id="@+id/ticket.details.showTicket"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@id/ticket.details.tableLayout"
   android:layout_centerHorizontal="true"
   android:text="@string/ticket.details.showTicket" />
 </RelativeLayout>

</ScrollView>