<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">
	<TextView android:text="@string/prefs.category.account.summary"
		android:id="@+id/choose_account.summary" android:layout_height="wrap_content"
		android:layout_width="wrap_content" style="@style/Label" />

	<Spinner android:id="@+id/choose_account.account"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_below="@id/choose_account.summary" />
		
	<Button android:text="@string/common.next" android:id="@+id/choose_account.nextButton"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"></Button>

</RelativeLayout>
